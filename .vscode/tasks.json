{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-console",
            "type": "shell",
            "command": "g++",
            "args": [
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "build-gui",
            "type": "shell",
            "command": "g++",
            "args": [
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-mwindows",
                "-std=c++17"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
